generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO: allow user for profile photos 
model User {
  id          String   @id @default(uuid())
  email       String   @unique
  firstName   String
  lastName    String
  phoneNumber String?  @unique
  address     Address?
  password    String
  createdAt   DateTime @default(now())
  products    Item[]   @relation("ItemAuthor")
  favorites   Item[]   @relation("UserFavorites")
}

model Address {
  id         String  @id @default(uuid())
  street     String?
  city       String?
  state      String?
  postalCode String?
  country    String?
  userId     String  @unique
  user       User    @relation(fields: [userId], references: [id])
}

model Item {
  id          Int            @id @default(autoincrement())
  name        String         @db.VarChar(255)
  description String
  price       Decimal
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  categoryId  Int
  authorId    String
  author      User           @relation("ItemAuthor", fields: [authorId], references: [id])
  category    Category       @relation(fields: [categoryId], references: [id])
  images      ProductImage[]
  favoritedBy User[]         @relation("UserFavorites")
}

model Category {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  imageUrl String?
  products Item[]
}

model ProductImage {
  id        Int    @id @default(autoincrement())
  url       String
  productId Int
  product   Item   @relation(fields: [productId], references: [id])
}
